    <body>
        <div class="contentbox">
            <div class="row">
                <div class="column" >
                   <div class="upload-head" style="margin-left: 200px;"> Upload your design below</div>
                        <div class="upload-subhead" style="margin-left: 200px;"> Make sure to upload a PNG of the design </div>  <br><br>
                  <form action="" method="POST" enctype="multipart/form-data">
                    <table style="margin-left: 200px;">
                      <tr>
                          <td>
                              <div class="form-label">Print Type</div> 
                          </td>
                          <td>
                              <div class="user-input">
                                <select id="color-type" name="printType" required onchange 
                                onpropertychange 
                                onkeyuponpaste oninput="rate()">
                                  <option value="DTG">DTG</option>
                                  <option value="Screen">Screen</option> 
                                </select> </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="form-label">Quantity</div> 
                          </td>
                          <td>
                              <div class="user-input"><input required id="user-qty"  value="1" name="quantity" class="user-input-box"
                                onchange 
                                onpropertychange 
                                onkeyuponpaste oninput="rate()" /></div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="form-label">Color</div> 
                          </td>
                          <td>
                            <div class="user-input">
                                <select name="color" id="user-color" required onchange 
                                onpropertychange 
                                onkeyuponpaste oninput="rate()">
                                  <option value="Black">Black</option>
                                  <option value="White">White</option>
                                  <option value="Blue">Blue</option>
                                </select> </div>
                          </td>
                      </tr>
                      <tr>
                          <td>
                            <div class="form-label">Add Design</div> 
                          </td>
                          <td>
                            <div class="user-input"> 
                                <div class="user-design">
                                    <label class="custom-file-upload">
                                        <input type="file" onchange="readURL(this)" name="image" accept='image/*'/>
                                        Upload your design here.
                                    </label>
                                </div>                               
                                </div>
                          </td>
                      </tr>
                      <tr>
                          <td colspan="2">
                            <div class="form-label">Remarks (if any)</div> <br>
                            <textarea name="remark" style="resize: none;" class="user-input-box text_area" placeholder="Any Additional information you would like to convey." id="" cols="50" rows="6"></textarea>
                          </td>
                      </tr>
                      <tr>
                        <td>
                          <div class="form-label">Print Price (â‚¹): </div>
                        </td>
                          <td><div class="user-input">
                            <input type="text" id="final-rate" class="amount" name="printPrice" readonly="readonly"/></div>
                          </td>
                      </tr>
                    </table>
                    <br><br>
                    <button class="add-order" style="margin-left: 200px;" id="place-order" disabled>Add to Order</button> 
                  </form>
                        

                </div>
                <div class="column">
                  <center>
                      <button class="front-btn">Front</button>
                      <br>
                      <div><br>
                          <img class="tshirt" id="t-shirt-color" src="/images/tshirt.png" >
                          <img class="mockup-img" id="img" >
                      </div>
                  </center>
                </div>
              </div>
        </div>
        


        <script>
                function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function (e) {
            document.querySelector("#img").setAttribute("src", e.target.result);
          };

          reader.readAsDataURL(input.files[0]);
        }
      }
        </script>
        <script src="/javascripts/script-tshirt.js"></script>
        
    </body>
    
    

